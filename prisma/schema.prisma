generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ScheduleStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  DELAYED
  SUSPENDED
}

enum AdministrativeSphere {
  FEDERAL
  STATE
  MUNICIPAL
  PRIVATE
  OTHER
}

enum ApprovalSector {
  TECHNICAL
  LEGAL
  OTHER
}

enum LegalInstrumentType {
  PDI_AGREEMENT
  SERVICE_CONTRACT
  APPDI_PRIVATE
  APPDI_NO_FUNDING
  COOP_AGREEMENT
  NDA
  TECH_TRANSFER
  REVIEW_SCOPE
}

model Proponent {
  id          String    @id @default(uuid())
  institution String?
  projects    Project[]

  userId String? @unique
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  imageId   String?
  imageFile File?   @relation(fields: [imageId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id            String  @id @default(uuid())
  slug          String? @unique
  title         String
  objectives    String  @db.Text
  justification String  @db.Text
  scope         String  @db.Text

  proponentId String
  proponent   Proponent @relation(fields: [proponentId], references: [id], onDelete: Restrict)

  workPlan WorkPlan?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  legalInstruments ProjectLegalInstrument[]

  @@index([proponentId])
}

model WorkPlan {
  id String @id @default(uuid())

  // 1â€“1 with Project
  projectId String  @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Typical plan fields
  object            String? @db.Text // title/short description of the object
  diagnosis         String? @db.Text
  planScope         String? @db.Text
  planJustification String? @db.Text

  generalObjective   String @db.Text
  specificObjectives Json?

  methodology     String? @db.Text
  responsibleUnit String?
  ictManager      String?
  partnerManager  String?

  monitoring      String? @db.Text
  expectedResults String? @db.Text

  validityStart DateTime?
  validityEnd   DateTime?

  schedule         ScheduleItem[]
  team             TeamMember[]
  participants     Participant[]
  responsibilities Responsibility[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ScheduleItem {
  id         String   @id @default(uuid())
  workPlanId String
  workPlan   WorkPlan @relation(fields: [workPlanId], references: [id], onDelete: Cascade)

  axisGoal    String
  actionStep  String         @db.Text
  indicator   String         @db.Text
  responsible String
  startDate   DateTime
  endDate     DateTime
  status      ScheduleStatus @default(PLANNED)

  @@index([workPlanId])
}

model TeamMember {
  id         String   @id @default(uuid())
  workPlanId String
  workPlan   WorkPlan @relation(fields: [workPlanId], references: [id], onDelete: Cascade)

  name          String
  titrationArea String?
  institution   String?
  role          String?
  weeklyHours   Int?

  @@index([workPlanId])
}

model Participant {
  id         String   @id @default(uuid())
  workPlanId String
  workPlan   WorkPlan @relation(fields: [workPlanId], references: [id], onDelete: Cascade)

  entityOrg String
  cnpj      String?
  sphere    AdministrativeSphere?
  address   String?               @db.Text

  authorityName String?
  authorityRole String?
  authorityDoc  String? // CPF/RG
  contact       String? // e-mail/phone

  responsibilities Responsibility[]

  @@index([workPlanId])
}

model Responsibility {
  id         String   @id @default(uuid())
  workPlanId String
  workPlan   WorkPlan @relation(fields: [workPlanId], references: [id], onDelete: Cascade)

  // Responsibility can be associated with a specific participant (or be general to the plan)
  participantId String?
  participant   Participant? @relation(fields: [participantId], references: [id])

  description String @db.Text

  @@index([workPlanId])
  @@index([participantId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  imageId       String?   @unique
  imageFile     File?     @relation(fields: [imageId], references: [id])
  color         String?
  firstAccess   Boolean   @default(true)

  proponent Proponent?

  accounts      Account[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model File {
  id          String   @id @default(cuid())
  key         String
  url         String
  bucket      String
  filename    String
  contentType String
  size        Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User?
  proponents Proponent[]
  legalInstruments LegalInstrument[]
  legalInstrumentInstances LegalInstrumentInstance[]
}

model Account {
  id                String @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String

  refresh_token String? @db.Text
  access_token  String? @db.Text
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String? @db.Text
  session_state String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// --- OTP by email (6 digit code, hash + expiration) ---
model OtpCode {
  id        String    @id @default(cuid())
  email     String
  codeHash  String // bcrypt hash of the code
  expiresAt DateTime
  usedAt    DateTime?
  sentAt    DateTime  @default(now())

  // optional: limit attempts
  attempts Int @default(0)

  @@index([email])
  @@index([expiresAt])
}

model LegalInstrument {
  id                   String                     @id @default(uuid())
  fieldsJson           Json
  type                 LegalInstrumentType

  fileId               String
  file                 File                       @relation(fields: [fileId], references: [id])

  projectLegalInstruments ProjectLegalInstrument[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model LegalInstrumentInstance {
  id                   String                     @id @default(uuid())
  fieldsJson           Json
  type                 LegalInstrumentType

  fileId               String
  file                 File                       @relation(fields: [fileId], references: [id])

  projectRelation      ProjectLegalInstrument[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProjectLegalInstrument {
  id                        String                      @id @default(uuid())

  projectId                 String                      @unique
  project                   Project                     @relation(fields: [projectId], references: [id])
  legalInstrumentId         String
  legalInstrument           LegalInstrument             @relation(fields: [legalInstrumentId], references: [id])
  legalInstrumentInstanceId String                      @unique
  legalInstrumentInstance   LegalInstrumentInstance     @relation(fields: [legalInstrumentInstanceId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
