generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ScheduleStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  DELAYED
  SUSPENDED
}

enum AdministrativeSphere {
  FEDERAL
  STATE
  MUNICIPAL
  PRIVATE
  OTHER
}

enum ApprovalSector {
  TECHNICAL
  LEGAL
  OTHER
}

enum LegalInstrumentType {
  PDI_AGREEMENT
  SERVICE_CONTRACT
  APPDI_PRIVATE
  APPDI_NO_FUNDING
  COOP_AGREEMENT
  NDA
  TECH_TRANSFER
  REVIEW_SCOPE
}

enum SystemDefaultType {
  Role
}

enum ResourceMembersType {
  Project
}

enum ProjectStatus {
  DRAFT
  PENDING_REVIEW
  UNDER_REVIEW
  APPROVED
  REJECTED
  RETURNED
}

model Project {
  id            String  @id @default(uuid())
  slug          String? @unique
  title         String
  objectives    String  @db.Text
  justification String  @db.Text
  scope         String  @db.Text

  status ProjectStatus @default(DRAFT)

  // Timestamp of last status transition
  statusUpdatedAt DateTime @default(now())

  // Approval tracking
  submittedAt     DateTime?
  reviewStartedAt DateTime?
  reviewStartedBy String?
  reviewer        User?     @relation("ProjectReviewer", fields: [reviewStartedBy], references: [id])
  approvedAt      DateTime?
  approvedBy      String?
  approver        User?     @relation("ProjectApprover", fields: [approvedBy], references: [id])
  rejectionReason String?   @db.Text
  returnReason    String?   @db.Text
  approvalOpinion String?   @db.Text

  userId String
  user   User   @relation("ProjectCreator", fields: [userId], references: [id])

  workPlan WorkPlan?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  legalInstrumentInstance LegalInstrumentInstance?
  audits                  ProjectAudit[]

  @@index([userId])
  @@index([approvedBy])
  @@index([reviewStartedBy])
  @@index([status])
  @@index([submittedAt])
}

model WorkPlan {
  id String @id @default(uuid())

  projectId String  @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  object            String? @db.Text
  diagnosis         String? @db.Text
  planScope         String? @db.Text
  planJustification String? @db.Text

  generalObjective   String @db.Text
  specificObjectives Json?  @db.JsonB

  methodology     String? @db.Text
  responsibleUnit String?
  ictManager      String?
  partnerManager  String?

  monitoring      String? @db.Text
  expectedResults String? @db.Text

  validityStart DateTime?
  validityEnd   DateTime?

  schedule         ScheduleItem[]
  team             TeamMember[]
  participants     Participant[]
  responsibilities Responsibility[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ScheduleItem {
  id         String   @id @default(uuid())
  workPlanId String
  workPlan   WorkPlan @relation(fields: [workPlanId], references: [id], onDelete: Cascade)

  axisGoal    String
  actionStep  String         @db.Text
  indicator   String         @db.Text
  responsible String
  startDate   DateTime
  endDate     DateTime
  status      ScheduleStatus @default(PLANNED)

  @@index([workPlanId])
}

model TeamMember {
  id         String   @id @default(uuid())
  workPlanId String
  workPlan   WorkPlan @relation(fields: [workPlanId], references: [id], onDelete: Cascade)

  name          String
  titrationArea String?
  institution   String?
  role          String?
  weeklyHours   Int?

  @@index([workPlanId])
}

model Participant {
  id         String   @id @default(uuid())
  workPlanId String
  workPlan   WorkPlan @relation(fields: [workPlanId], references: [id], onDelete: Cascade)

  entityOrg String
  cnpj      String?
  sphere    AdministrativeSphere?
  address   String?               @db.Text

  authorityName String?
  authorityRole String?
  authorityDoc  String?
  contact       String?

  responsibilities Responsibility[]

  @@index([workPlanId])
}

model Responsibility {
  id         String   @id @default(uuid())
  workPlanId String
  workPlan   WorkPlan @relation(fields: [workPlanId], references: [id], onDelete: Cascade)

  participantId String?
  participant   Participant? @relation(fields: [participantId], references: [id])

  description String @db.Text

  @@index([workPlanId])
  @@index([participantId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  imageId       String?   @unique
  imageFile     File?     @relation(fields: [imageId], references: [id])
  color         String?
  institution   String?
  firstAccess   Boolean   @default(true)

  createdProjects  Project[]      @relation("ProjectCreator")
  reviewedProjects Project[]      @relation("ProjectReviewer")
  approvedProjects Project[]      @relation("ProjectApprover")
  auditLogs        ProjectAudit[] @relation("AuditChangedBy")

  accounts  Account[]
  userRoles UserRole[]

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  resourceMembers ResourceMembers[]
  notifications   Notification[]
}

model File {
  id          String   @id @default(cuid())
  key         String
  url         String
  bucket      String
  filename    String
  contentType String
  size        Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user                            User?
  legalInstrumentTemplates        LegalInstrument[]        @relation("LegalInstrumentTemplateFile")
  legalInstrumentTemplateVersions LegalInstrumentVersion[] @relation("LegalInstrumentVersionTemplateFile")
  legalInstrumentInstanceFilled   LegalInstrumentInstance[] @relation("InstanceFilledFile")
}

model Account {
  id                String @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String

  refresh_token String? @db.Text
  access_token  String? @db.Text
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String? @db.Text
  session_state String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// --- OTP by email (6 digit code, hash + expiration) ---
model OtpCode {
  id        String    @id @default(cuid())
  email     String
  codeHash  String // bcrypt hash of the code
  expiresAt DateTime
  usedAt    DateTime?
  sentAt    DateTime  @default(now())

  // optional: limit attempts
  attempts Int @default(0)

  @@index([email])
  @@index([expiresAt])
}

model LegalInstrument {
  id          String @id @default(uuid())
  name        String
  description String

  type         LegalInstrumentType @unique
  revisionKey  String              @default(uuid())
  fieldsJson   Json                @db.JsonB

  templateFileId String
  templateFile   File @relation("LegalInstrumentTemplateFile", fields: [templateFileId], references: [id])

  versions LegalInstrumentVersion[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LegalInstrumentVersion {
  id String @id @default(uuid())

  legalInstrumentId String
  legalInstrument   LegalInstrument @relation(fields: [legalInstrumentId], references: [id], onDelete: Cascade)

  version      Int
  revisionKey  String
  type         LegalInstrumentType
  fieldsJson   Json                @db.JsonB

  templateFileId String
  templateFile   File   @relation("LegalInstrumentVersionTemplateFile", fields: [templateFileId], references: [id])

  instances LegalInstrumentInstance[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([legalInstrumentId, version])
  @@unique([legalInstrumentId, revisionKey])
  @@index([legalInstrumentId])
  @@index([type])
}

enum LegalInstrumentStatus {
  PENDING
  PARTIAL
  FILLED
}

model LegalInstrumentInstance {
  id                           String                @id @default(uuid())
  answers                      Json?                 @db.JsonB
  projectClassificationAnswers Json?                 @db.JsonB
  status                       LegalInstrumentStatus @default(PENDING)

  projectId String  @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  legalInstrumentVersionId String
  legalInstrumentVersion   LegalInstrumentVersion @relation(fields: [legalInstrumentVersionId], references: [id])

  filledFileId String?
  filledFile   File?   @relation("InstanceFilledFile", fields: [filledFileId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([legalInstrumentVersionId])
  @@index([status])
}

// Authenticaitons

model Role {
  id          String  @id @default(uuid())
  name        String
  description String?
  slug        String  @unique

  userRoles       UserRole[]
  rolePermissions RolePermission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserRole {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])
  roleId String
  role   Role   @relation(fields: [roleId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, roleId])
  @@index([userId])
}

model RolePermission {
  id String @id @default(uuid())

  roleId       String
  role         Role       @relation(fields: [roleId], references: [id])
  permissionId String
  permission   Permission @relation(fields: [permissionId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
}

model Permission {
  id          String  @id @default(uuid())
  name        String
  description String?
  slug        String  @unique

  resourceMembers ResourceMembers[]
  rolePermissions RolePermission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ResourceMembers {
  id String @id @default(uuid())

  userId       String
  user         User       @relation(fields: [userId], references: [id])
  permissionId String
  permission   Permission @relation(fields: [permissionId], references: [id])

  referenceTable ResourceMembersType
  referenceId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, permissionId, referenceId])
  @@index([userId, permissionId])
  @@index([referenceTable, referenceId])
}

// System

model SystemDefaults {
  id             String             @id @default(uuid())
  slug           String             @unique
  referenceTable SystemDefaultType?
  referenceId    String?
  value          String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectAudit {
  id            String   @id @default(uuid())
  projectId     String
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  action        String
  changedBy     String
  user          User     @relation("AuditChangedBy", fields: [changedBy], references: [id])
  changeDetails Json?    @db.JsonB
  createdAt     DateTime @default(now())

  @@index([projectId])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String
  message   String   @db.Text
  type      String   // E.g., 'PROJECT_STATUS', 'SYSTEM', 'REMINDER'
  url       String?  // Link opcional para ação
  
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([read])
}
