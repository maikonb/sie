generator client {
  provider = "prisma-client"
  output   = "../lib/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum ScheduleStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  DELAYED
  SUSPENDED
}

enum AdministrativeSphere {
  FEDERAL
  STATE
  MUNICIPAL
  PRIVATE
  OTHER
}

enum ApprovalSector {
  TECHNICAL
  LEGAL
  OTHER
}

model Proponent {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  institution String?
  projects  Project[]

  userId   String?   @unique
  user     User?     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id            Int           @id @default(autoincrement())
  title         String
  objectives    String        @db.Text
  justification String        @db.Text
  scope         String        @db.Text

  proponentId   Int
  proponent     Proponent     @relation(fields: [proponentId], references: [id], onDelete: Restrict)

  workPlan      WorkPlan?

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([proponentId])
}

model WorkPlan {
  id          Int      @id @default(autoincrement())

  // 1â€“1 with Project
  projectId   Int      @unique
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Typical plan fields
  object               String?   @db.Text       // title/short description of the object
  diagnosis            String?   @db.Text
  planScope            String?   @db.Text
  planJustification    String?   @db.Text

  generalObjective     String    @db.Text
  specificObjectives   Json?             

  methodology          String?   @db.Text
  responsibleUnit      String?
  ictManager           String?
  partnerManager       String?

  monitoring           String?   @db.Text
  expectedResults      String?   @db.Text

  validityStart        DateTime?
  validityEnd          DateTime?

  schedule       ScheduleItem[]
  team           TeamMember[]
  participants   Participant[]
  responsibilities Responsibility[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ScheduleItem {
  id               Int            @id @default(autoincrement())
  workPlanId       Int
  workPlan         WorkPlan       @relation(fields: [workPlanId], references: [id], onDelete: Cascade)

  axisGoal         String
  actionStep       String         @db.Text
  indicator        String         @db.Text
  responsible      String
  startDate        DateTime
  endDate          DateTime
  status           ScheduleStatus @default(PLANNED)

  @@index([workPlanId])
}

model TeamMember {
  id               Int            @id @default(autoincrement())
  workPlanId       Int
  workPlan         WorkPlan       @relation(fields: [workPlanId], references: [id], onDelete: Cascade)

  name            String
  titrationArea   String?
  institution     String?
  role            String?
  weeklyHours     Int?

  @@index([workPlanId])
}

model Participant {
  id               Int            @id @default(autoincrement())
  workPlanId       Int
  workPlan         WorkPlan       @relation(fields: [workPlanId], references: [id], onDelete: Cascade)

  entityOrg        String
  cnpj             String?
  sphere           AdministrativeSphere?
  address          String?         @db.Text

  authorityName    String?
  authorityRole    String?
  authorityDoc     String?       // CPF/RG
  contact          String?       // e-mail/phone

  responsibilities Responsibility[]

  @@index([workPlanId])

}

model Responsibility {
  id               Int            @id @default(autoincrement())
  workPlanId       Int
  workPlan         WorkPlan       @relation(fields: [workPlanId], references: [id], onDelete: Cascade)

  // Responsibility can be associated with a specific participant (or be general to the plan)
  participantId    Int?
  participant      Participant?   @relation(fields: [participantId], references: [id])

  description      String         @db.Text

  @@index([workPlanId])
  @@index([participantId])
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?
  firstAccess   Boolean  @default(true)

  proponent     Proponent?

  accounts      Account[]
  sessions      Session[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String

  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- OTP by email (6 digit code, hash + expiration) ---
model OtpCode {
  id        String   @id @default(cuid())
  email     String
  codeHash  String   // bcrypt hash of the code
  expiresAt DateTime
  usedAt    DateTime?
  sentAt    DateTime  @default(now())

  // optional: limit attempts
  attempts  Int       @default(0)

  @@index([email])
  @@index([expiresAt])
}
